<%- include('./includes/head.ejs') %>

<span style="position: fixed; top: 0; width: 100%; background-color: red; color: aqua; text-align: center;">
	<% if (typeof message != 'undefined' && message) { %>
	<%=message%>
	<% } %>

</span>

<body id="page-top">


	<%- include('./includes/nav.ejs') %>
	<!-- Intro Header -->
	<header class="masthead">
		<div class="intro-body">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 mx-auto">
						<h2>A testing platform to enhance your <span style="text-decoration: underline;">User's Experience</span></h2>
						<div class="col-8 mx-auto mb-5">
							<span class="checkmark"><i class="fa fa-check"></i></span>
							<input placeholder="Put your website address here." id="homeURL" class="form-control" required>

							<a href="#anchor" id="start-test" class="btn btn-circle js-scroll-trigger mt-5">
								<i class="fa fa-angle-double-down animated"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
	</header>

	<!-- About Section -->
	<section id="start-test" class="content-section text-center">
		<div class="container">
			<div class="row">
				<div class="col-sm-2 col-12"></div>
				<div class="col-12 col-sm-8">
					<div class="card">
						<div class="card-body" id="anchor">
							<h3 class="card-title text-black">Create Tasks</h3>
							<p class="card-text text-black mb-0">Add custom tasks to have your Testers accomplish to get more data to help you
								better your sites navigation and usability. </p>
								<p class="text-danger">ONLY 5 TOTAL TASKS ALLOWED</p>
							<form name="noLog" action="/site/" method="post">
								<div class="row">
									<div class="col-12 mb-5">
										<input placeholder="Your URL" name="webURL" id="webURL" class="form-control" required>
									</div>
								</div>
								<div class="row text-black mb-3">
									<div class="col-2">Test Name:</div>
									<div class="col-10">
										<input class="form-control" name="testName" placeholder="Give your test a name.">
									</div>
								</div>
								<section id="tasks">
									<div class="row text-black task-copy-template mb-3" id="taskItem">
										<div class="col-2">Task <span id="taskNumber">1</span>:</div>
										<div class="col-10">
											<input class="form-control" name="task0" placeholder="Put a task here.">
											<i class="fa fa-minus-circle add-delete" onclick="deleteTask(this)" style="display:none;"></i>
										</div>
									</div>
									<div class="row text-black" id="taskItem">
										<div class="col-2">Task <span id="taskNumber">2</span>:</div>
										<div class="col-10">
											<input class="form-control" name="task1" placeholder="Put a task here.">
											<i class="fa fa-minus-circle" onclick="deleteTask(this)"></i>
										</div>
									</div>
									<div class="row text-black" id="taskItem">
										<div class="col-2">Task <span id="taskNumber">3</span>:</div>
										<div class="col-10">
											<input class="form-control" name="task2" placeholder="Put a task here.">
											<i class="fa fa-minus-circle" onclick="deleteTask(this)"></i>
										</div>
									</div>
								</section>
								<div class="row">
									<div class="col-12">
										<div class="add-task-button">
											<i class="fa fa-plus-circle" aria-hidden="true" onclick="addTask()"></i>
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-12">
										<button type="submit" id="submit" class="btn btn-default btn-sm w50 rounded">Submit</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-sm-2 col-12"></div>
			</div>
		</div>
	</section>



	<%- include('./includes/footer.ejs') %>

	<%- include('./includes/scripts.ejs') %>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.dev.js"></script>
	<script src="js/checkURL.js"></script>
	<script src="js/homeExtras.js"></script>
	<!-- Custom scripts for this template -->
	<script src="js/grayscale.js"></script>

</body>

</html>